{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=ItemManagement;Integrated Security=True",
    "AccountContextConnection": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=WebApp_Accounts;Integrated Security=True"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day", // Use string "Day" (not "RollingInterval.Day")
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 31
        }
      }
    ]
  },
